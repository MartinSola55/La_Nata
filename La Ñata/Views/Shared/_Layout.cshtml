<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - La Ñata</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/navbar.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="icon" type="image/jpg" href="~/Content/Images/favicon.png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-custom navbar-mainbg py-3">
            <a class="navbar-brand navbar-logo" href="/Home">
                <img src="~/Content/Images/logo.png" alt="Logo" class="imgShadow" style="max-width: 400px; max-height: 60px;">
            </a>
            <div id="navbtn">
                <button class="navbar-toggler mb-0" style="border: none; color: transparent" type="button" aria-controls="navbarContainer" aria-expanded="false" aria-label="Cerrar navegación">
                    <i class="bi bi-list" style="color: white !important"></i>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navbarContainer">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" id="HomeLink" href="/Home"><i class="bi bi-house"></i>Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="ProductsLink" href="/Products"><i class="bi bi-box-seam"></i>Stock</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="OrdersLink" href="/Orders"><i class="bi bi-card-list"></i>Pedidos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="ExpensesLink" href="/Expenses"><i class="bi bi-cash"></i>Gastos</a>
                    </li>
                    <li class="nav-item" id="logout">
                        <a class="nav-link" href="/Login/Logout"><i class="bi bi-box-arrow-left"></i>Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <script src="~/Scripts/jquery-3.6.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/navbar.js"></script>

    <main>
        <div id="page-container">
            <div id="content-wrap" class="container body-content" style="padding-top: 3rem">
                @RenderBody()
                <br />
            </div>
        </div>
    </main>
    <footer id="footer" class="text-center bg-dark text-white d-flex align-items-center justify-content-center">
        <p id="footerText" class="m-0 text-center px-3" style="font-size: 1.1rem; color: rgba(255, 255, 255, 0.8);">La Ñata - Todos los derechos reservados @DateTime.UtcNow.AddHours(-3).Year &copy; </p>
    </footer>

</body>
</html>

<style>
    .imgShadow {
        -webkit-filter: drop-shadow(0 0 10px #fff);
        filter: drop-shadow(0 0 8px #fff);
    }
</style>